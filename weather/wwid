def install_package(package):
    """
    Install a package using conda if available, otherwise use pip.
    """
    try:
        # Try installing with conda first
        subprocess.check_call([sys.executable, '-m', 'conda', 'install', '-y', package])
    except:
        # If conda fails, use pip
        subprocess.check_call([sys.executable, '-m', 'pip', 'install', package])

def import_or_install(packages):
    """
    Import packages, and install them if they are not available.
    """
    for package in packages:
        try:
            # Try to import the package
            __import__(package)
            print(f"{package} is already installed and imported.")
        except ImportError:
            # If import fails, install the package
            print(f"{package} not found. Installing...")
            install_package(package)
            # Try importing again after installation
            __import__(package)
            print(f"{package} has been installed and imported.")

# Import or install all required packages
import_or_install(required_packages)
